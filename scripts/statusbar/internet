#!/bin/sh

case $BLOCK_BUTTON in
    1) pgrep -x dunst >/dev/null && dunstify " " "$(nmap_filter_clients /tmp/nmap-list.txt)" ;;
	3) $TERMINAL -e nmtui ;;
# 	3) pgrep -x dunst >/dev/null && notify-send "  Internet module:" "
# - Click for \`nmtui\` for wifi access\n
# ğŸ“¶: wifi connection with quality
# ğŸ“¡: wifi connection established
# ğŸ›‘  wifi connection lost
# ğŸŒ: ethernet connection established
# â: ethernet connection lost
# " ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#[ "$(cat /sys/class/net/w*/operstate)" == 'up' ] && wifiicon="ğŸ“¡ "
#[ "$(cat /sys/class/net/w*/operstate)" == 'down' ] && wifiicon="ğŸ›‘ "
num_clients="$(nmap_filter_clients /tmp/nmap-list.txt | wc -l)"

[ ! -n "${wifiicon+var}" ] && wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸ“¶", int($3 * 100 / 70) "%" }')

printf "%s %s\n" "$wifiicon " "$num_clients"
# "$(cat /sys/class/net/w*/operstate | sed "s/down/ğŸ›‘ / ;s/up/ğŸ“¡ /")"
