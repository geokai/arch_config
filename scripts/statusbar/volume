#!/bin/sh

case $BLOCK_BUTTON in
	1) i3-msg -q "exec --no-startup-id $TERMINAL -f mono:pixelsize=10 pulsemixer --color 1" ;;
	2) pulsemixer --toggle-mute ;;
	4) pulsemixer --change-volume -5 ;;
	5) pulsemixer --change-volume +5 ;;
	3) dunstmerge nf_right-top gr_bg-settings && dunstify "  ðŸ“¢ Volume module:" "
- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "ðŸ”‡\\n" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
